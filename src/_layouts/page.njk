<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} | The MORPHSS Catalogue</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="logo-bar">
    <div class="container">
      <a href="https://morphss.hcommons.org" target="_blank" rel="noopener">
        <img src="/images/MORPHSS.png" alt="MORPHSS" class="morphss-logo">
      </a>
    </div>
  </div>
  
  <header class="site-header">
    <div class="container">
      <h1 class="site-title">
        <a href="/">The MORPHSS Catalogue of Open Research Practices in the Arts, Humanities, and Social Sciences</a>
      </h1>
    </div>
  </header>
  
  <main class="container">
    <article class="page-layout">
      <div class="page-left-column">
        {{ leftColumn | safe }}
        {% if showFunderCredits %}
        {% include "funder-credits.njk" %}
        {% endif %}
      </div>
      
      <aside class="page-right-column">
        {{ rightColumn | safe }}
      </aside>
    </article>
  </main>
  
  <script>
    (function() {
      const logoBar = document.querySelector('.logo-bar');
      let lastScroll = 0;
      
      window.addEventListener('scroll', function() {
        const currentScroll = window.pageYOffset;
        
        if (currentScroll <= 0) {
          logoBar.classList.remove('logo-bar--hidden');
        } else if (currentScroll > lastScroll) {
          logoBar.classList.add('logo-bar--hidden');
        } else {
          logoBar.classList.remove('logo-bar--hidden');
        }
        
        lastScroll = currentScroll;
      });
    })();
  </script>
</body>
</html>

